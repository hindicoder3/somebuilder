{
    "compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ES2022",
		"module": "ESNext",
		"declaration": false,
		"sourceMap": false,
		"allowJs": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"alwaysStrict": true,
		"removeComments": true,
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
    },
    "include": ["./src"]
}
